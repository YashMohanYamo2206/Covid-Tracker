<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/davy_grey">

    <TextView
        android:id="@+id/txt_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14"
        tools:text="STATES" />

    <RelativeLayout
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_confirmed"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />

            <TextView
                android:id="@+id/txt_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_confirmed"
                android:textSize="@dimen/text_14"
                tools:text="Confirmed : 220 " />

            <ImageView
                android:id="@+id/img_recovered"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                android:layout_marginStart="@dimen/space_x2"
                android:layout_marginLeft="@dimen/space_x2"
                app:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

            <TextView
                android:id="@+id/txt_recovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_recovered"
                android:textSize="@dimen/text_14"
                tools:text="Recovered : 90 " />
            <ImageView
                android:id="@+id/img_death"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />

            <TextView
                android:id="@+id/txt_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_confirmed"
                android:textSize="@dimen/text_14"
                tools:text="Death : 220 " />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3sp"
            android:layout_below="@+id/layout_case"
            android:id="@+id/layout_case_delta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_confirmed_delta"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />

            <TextView
                android:id="@+id/txt_confirmed_delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_confirmed"
                android:textSize="@dimen/text_14"
                tools:text="Confirmed : 220 " />

            <ImageView
                android:id="@+id/img_recovered_delta"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                android:layout_marginStart="@dimen/space_x2"
                android:layout_marginLeft="@dimen/space_x2"
                app:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

            <TextView
                android:id="@+id/txt_recovered_delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_recovered"
                android:textSize="@dimen/text_14"
                tools:text="Recovered : 90 " />
            <ImageView
                android:id="@+id/img_death_delta"
                android:layout_width="@dimen/space_x3"
                android:layout_height="@dimen/space_x3"
                app:srcCompat="@drawable/ic_baseline_arrow_upward_24" />

            <TextView
                android:id="@+id/txt_death_delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginLeft="@dimen/space"
                android:textColor="@color/color_confirmed"
                android:textSize="@dimen/text_14"
                tools:text="Death : 220 " />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>